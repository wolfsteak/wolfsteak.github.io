---
layout: none
---
<li class="post">
        <div class="row">
        <div class="col-sm-3 post-thumbnail">
            
                <img src="{{post.thumbnail}}">    
            
        </div>
        <div class="col-sm-9">
            <div class="post-preview">
                
                <a href="{{ post.url | prepend: site.baseurl }}">
                    
                    
                    <h2 class="post-title">
                        {{ post.title }}
                    </h2>
                    {% if post.subtitle %}
                    <h3 class="post-subtitle">
                        {{ post.subtitle }}
                    </h3>
                    {% endif %}

                </a>
                <p class="post-meta">Posted by {{ post.author }} on {{ post.date | date: "%B %-d, %Y" }}</p>
            </div>
            
        </div>
        </div>
        <hr>
    </li>
